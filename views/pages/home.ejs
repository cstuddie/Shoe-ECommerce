<!-- Hero Section -->
<div class="hero">
    <div class="container">
      <h1>Welcome to StepUp</h1>
      <p>Find your perfect pair today!</p>
      <a href="/inventory" class="hero-button">Shop Now</a>
    </div>
  </div>
  
  <!-- Featured Products Section -->
  <section class="featured-products">
    <div class="container">
      <h2>Featured Products</h2>
      <div class="product-list">
        <% if (featuredProducts && featuredProducts.length > 0) { %>
          <% featuredProducts.forEach(product => { %>
            <a href="/product/<%= product.ProductID %>" class="product-card">
              <img 
                src="<%= product.ImageUrl %>" 
                alt="<%= product.Name %>"
                onerror="this.src='/images/default-product.jpg';"
              >
              <h3><%= product.Name %></h3>
              <p class="price">$<%= product.Price %></p>
            </a>
          <% }); %>
        <% } else { %>
          <div class="no-products">
            <p>No featured products available at this time.</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="about-content">
        <h2>About StepUp</h2>
        <p>At StepUp, we're passionate about providing high-quality footwear for every occasion. Our carefully curated collection features the latest trends and timeless classics, ensuring you always put your best foot forward.</p>
        <p>Whether you're looking for running shoes that go the distance, casual kicks for everyday wear, or something special for those important moments, we've got you covered.</p>
      </div>
    </div>
  </section>
  
  <!-- Call to Action Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Join Our Community</h2>
        <p>Sign up today and get access to exclusive deals, new arrivals, and more!</p>
        <div class="cta-buttons">
          <% if (!isAuthenticated) { %>
            <a href="/signup" class="cta-button primary">Sign Up</a>
            <a href="/login" class="cta-button secondary">Login</a>
          <% } else { %>
            <a href="/inventory" class="cta-button primary">Browse Collection</a>
          <% } %>
        </div>
      </div>
    </div>
  </section>